include ../../mixins/alert.pug

doctype html 
header 
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
    link( rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css")
    link(rel="stylesheet", href="../css/login.css")
    title Đăng nhập 
body 
    .box.d-flex
        +alert-error(5000)

        .box-left
            form(
                class="item-username form-left" 
                form-register
                method="post"
                action="/user/register"
            ) 
                label(for="fullname" class="title") Họ và Tên
                input(name="fullname" id="fullname" type="text" required)
                label(for="sdt" class="title") Số Điện thoại
                input(name="phone" id="sdt" type="text" required)
                .gender 
                    label <input type="radio" name="gender" value="nam">Nam
                    label <input type="radio" name="gender" value="nữ">Nữ
                label(for="birthdate" class="bd") Date of Birth
                input(type="date" id="birthdate" name="birthdate" required)
                label(for="username-left" class="title") Tài khoản 
                input(name="username-left" id="username-left" type="email" required)
                label(for="password" class="title" required) Mật khẩu 
                input(name="password" id="password" type="password")
                button(
                    class="button-click"
                    type="submit"
                ) ĐĂNG KÍ
                div.mt-1
                    span(style="color: #50a5ed; font-size: 14px") <i><strong>LƯU Ý</strong>: các trường trên là bắt buộc!</i>
        .box-right
            form(
                method="post"
                action="/user/login"
                class="item-username form-right" 
                form-login
            )
                label(for="username_right" class="title") Tài khoản 
                input(name="username_right" id="username_right" type="text")
                label(for="pw" class="title") Mật khẩu 
                input(name="pw" id="pw" type="password")
                button(
                    class="button-click"
                    type="submit"
                ) ĐĂNG NHẬP
        .box-overplay.box-dangdangnhap-click
            .dangky Đăng ký 
            .quenmk Quên tài khoản
            .dangnhap Đăng nhập
    .reposive 
        p.res-dangky.res Đăng ký
        p.res-qmk.res Quên mật khẩu 
        p.res-dangnhap.res Đăng nhập
    script(src="../js/login.js")